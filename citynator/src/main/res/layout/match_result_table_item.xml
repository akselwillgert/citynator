<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/game_results"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_bg">

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="City Name" />

    <ImageView

        android:id="@+id/country_flag"
        android:layout_width="40dp"
        android:layout_height="30dp"
        tools:src="@drawable/se" />

    <ImageView
        android:id="@+id/game_result_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gps_fixed_24dp"
        tools:tint="@color/red_900" />
    <TextView
        android:id="@+id/game_result_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        tools:text="3212km" />

    <TextView
        android:id="@+id/game_result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        tools:text="2.2s"
        />

</TableRow>
