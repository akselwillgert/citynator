<resources>

    <color name="primary">@color/blue_300</color>
    <color name="primary_dark">@color/blue_700</color>
    <color name="accent">#ffc400</color>
    <color name="text_primary">#D9FFFFFF</color>
    <color name="text_secondary">#D9000000</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="details_frame">
        <item name="android:background">@android:drawable/picture_frame</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="game_results">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">right|fill|center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="citynator_red_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/citynator_button</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="city_marker">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@color/citynator_blue_alpha</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="countdown">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">@color/citynator_blue_alpha</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">30</item>
        <item name="android:lines">1</item>
    </style>

    <style name="high_score">
        <item name="android:textColor">@color/red_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">@color/citynator_grey_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="game_type_score">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/citynator_grey_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>
